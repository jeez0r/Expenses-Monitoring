<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/wave" />

    <ImageView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/wave3" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddSpend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_interval"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:contentDescription="Add Spent"
            android:src="@drawable/baseline_add_24"
            app:backgroundTint="@color/button_selected"
            app:tint="@android:color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_spent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="300dp" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSpend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:layout_anchor="@+id/relativeLayout"
                app:layout_anchorGravity="center"
                tools:listitem="@layout/spend_item" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rvDates"
            android:layout_marginTop="8dp"
            android:orientation="vertical">


            <RadioGroup
                android:id="@+id/rg_rgInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@null"
                    android:checked="true"
                    android:shadowColor="@color/black"
                    android:shadowRadius="1"
                    android:text="Daily"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_text_selector"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_weekly"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@null"
                    android:shadowColor="@color/white"
                    android:shadowRadius="1"
                    android:text="Weekly"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_text_selector"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@null"
                    android:shadowColor="@color/white"
                    android:shadowRadius="1"
                    android:text="Monthly"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_text_selector"
                    android:textSize="14sp" />

                <RadioButton

                    android:id="@+id/rb_custome"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@null"
                    android:shadowColor="@color/white"
                    android:shadowRadius="1"
                    android:text="Custom"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_text_selector"
                    android:textSize="14sp" />

            </RadioGroup>



        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rlheader" />

        <LinearLayout
            android:id="@+id/rlheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvSelectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:shadowColor="@color/white"
                android:shadowDx="4"
                android:shadowRadius="1"
                android:text="Today"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/button_selected"
                android:contentDescription="Previous week"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/button_selected"
                android:contentDescription="Next week"
                android:src="@drawable/baseline_arrow_forward_24"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvDates"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMonthYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rvDates"
                android:paddingEnd="5dp"
                android:shadowColor="@color/white"
                android:shadowDx="2"
                android:shadowRadius="1"
                android:text="month"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="2dp"
                android:text="Remaining : 5000"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_spent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_interval"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="2dp"
                android:shadowColor="@color/white"
                android:shadowDx="2"
                android:shadowRadius="1"
                android:text="Total Spent : "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalSpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="2dp"
                android:text="0"
                android:textColor="@color/textspend"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ib_showcart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"

                android:background="@color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_chart" />

            <ImageButton
                android:id="@+id/ib_showbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bar" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:hint="Monthly Budget"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="123"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_interval"
            android:layout_above="@+id/ll_daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="2dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="2"
                    android:shadowRadius="1"
                    android:text="Spent Calculation Interval"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSpendCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
