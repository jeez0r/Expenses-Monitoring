<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/wave" />

    <ImageView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/wave3" />





    <!-- Add this inside your RelativeLayout, perhaps above the ll_spent LinearLayout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <include
            android:id="@+id/toolbarHouseHoldList"
            layout="@layout/tool_bar" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="40dp"


        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">



        <LinearLayout
            android:layout_alignParentTop="true"
            android:id="@+id/ll_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Budget: "
                    android:textColor="@color/orange"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:textColor="@color/orange"
                    android:id="@+id/tvBudgetRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱0.00"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:textColor="@color/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="/ "
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvBudgetAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"

                    android:text="₱0.00"
                    android:textSize="14sp"
                    android:textStyle="bold"/>






            </LinearLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBudget"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                app:trackColor="@color/future_date_text"
                app:trackCornerRadius="4dp"
                app:indicatorColor="@color/button_selected"/>

        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddSpend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_daily"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="Add Spent"
            android:src="@drawable/baseline_add_24"
            app:backgroundTint="@color/button_selected"
            app:tint="@android:color/white" />


        <LinearLayout
            android:layout_below="@+id/ll_budget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_daily"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSpend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:layout_anchor="@+id/relativeLayout"
                app:layout_anchorGravity="center"
                tools:listitem="@layout/spend_item" />


        </LinearLayout>


        <LinearLayout

            android:id="@+id/ll_daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_weeks"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">


            <RadioGroup
                android:id="@+id/rg_rgInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@null"
                    android:checked="true"
                    android:shadowColor="@color/black"
                    android:shadowRadius="1"
                    android:text="Daily"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_text_selector"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_weekly"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@null"
                    android:shadowColor="@color/white"
                    android:shadowRadius="1"
                    android:text="Weekly"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_text_selector"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@null"
                    android:shadowColor="@color/white"
                    android:shadowRadius="1"
                    android:text="Monthly"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_text_selector"
                    android:textSize="14sp" />

                <RadioButton

                    android:id="@+id/rb_custome"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@null"
                    android:shadowColor="@color/white"
                    android:shadowRadius="1"
                    android:text="Custom"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_text_selector"
                    android:textSize="14sp" />

            </RadioGroup>



        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/ll_weeks"
            android:layout_width="match_parent"
           android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/button_selected"
                android:contentDescription="Previous week"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="@color/white" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDates"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rlheader" />


            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/button_selected"
                android:contentDescription="Next week"
                android:src="@drawable/baseline_arrow_forward_24"
                app:tint="@color/white" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/rlheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">






        </LinearLayout>











    </RelativeLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
