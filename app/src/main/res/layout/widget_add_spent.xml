<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background">

    <!-- Amount Display -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_gravity="top"
            android:id="@+id/etAmount"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:shadowRadius="3"
            android:shadowColor="@color/black"
            android:gravity="center" />

        <!-- Add this button next to your amount buttons -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/transparent"
            android:text="X"
            android:shadowColor="@color/transparent"
            android:background="@drawable/button_background"
            android:textColor="@color/textspend"
            android:textSize="24sp"
            />
    </LinearLayout>

    <!-- Category Spinner (using a button to simulate dropdown) -->

    <!-- Quick Amount Buttons -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:layout_marginStart="10dp"
        android:text="Select Category"/>
    <Button
        android:textColor="@color/white"
        android:id="@+id/btnCategory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/button_selected"
        android:text="Select Category"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <Button
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:id="@+id/btnAmount10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+10"
            android:textSize="12sp"
            android:backgroundTint="@color/button_selected" />

        <Button
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:id="@+id/btnAmount100"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+100"
            android:textSize="12sp"
            android:backgroundTint="@color/button_selected" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <Button
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:id="@+id/btnAmount500"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+500"
            android:textSize="12sp"
                   android:backgroundTint="@color/button_selected" />

        <Button
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:id="@+id/btnAmount1000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+1000"
            android:textSize="12sp"
            android:backgroundTint="@color/button_selected" />
    </LinearLayout>

    <!-- Save Button -->


        <Button
            android:textColor="@color/white"
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Save"
            android:textSize="14sp"
            android:backgroundTint="@color/button_selected" />




</LinearLayout>